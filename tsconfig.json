{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src/combat/**/*.ts",
    "src/constants/**/*.ts",
    "src/logic/**/*.ts",
    "src/selectors/**/*.ts",
    "src/utils/**/*.ts",
    "src/__tests__/**/*.ts",
    "tests/**/*.ts"
  ]
}
